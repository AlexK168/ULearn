<%= form_for @course do |f| %>
  <div class="field">
    <%= f.label :course_name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :info_about_course %><br />
    <%= f.text_area :info, size: "40x12" %>
  </div>
  <div class="field">
    <%= f.label :duration %><br />
    <%= f.number_field(:duration, in: 1.0..40.0, step: 1.0) %>
  </div>

  <%= f.submit "Create" %>
<% end %>